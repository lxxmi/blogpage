<%- include("../partials/header") %>
<div class="ui main text segment container">
  <div class="ui item">
    
    <div class="titleBox">
      <h2 style="display:inline"><%= body.title %></h2>
       
      <% if(currentUser && ((currentUser.name =="admin")||(body.author._id.equals(currentUser._id) ) ) ) { %>
      <div class="ui simple dropdown item rightfloat">
            <i class="ellipsis vertical icon"></i>
            <div class="left menu">
                <a class="ui item" href="/blogs/<%=body._id%>/edit">
                  Edit
                </a>
              <form action="/blogs/<%=body._id%>?_method=DELETE" method="POST">
                <button style="margin:0;background-color:white;" class="ui white button item">
                  Delete
                </button>
              </form>
                
          </div>
        </div>      
      <% } %>
      
      <span class="rightfloat">
        <a class="ui tiny basic black button"href="/blogs">Back</a>
      </span>
    </div>

    <div class="authorBox">
      <i style="display:inline-block" class="avatar user large icon"></i>
      <span class="content" >
          <a class="ui item" href="/userposts/<%=body.author._id %>">
            <%= body.author.name %>
          </a>
        <span class="rightfloat date">
          <%=body.createdOn.toDateString() %>
        </span>
      </span>
    
    </div>
  </div>
</br>
    <img src="/<%= body.image%>" class="ui centered image" style="width:100%;height:300px;">
    <p>
      <%- body.desc %>
    </p>
      <em>Submitted By <%= body.author.name%></em>

<div class="ui comments">
  <h3 class="ui dividing header">Comments</h3>
    <% body.comments.forEach(function(x){ %>
    <div class="comment">
      <i class="avatar user large icon"></i>
        <div class="hor1" style="margin-left:5px">
          <a class="author" href="/userposts/<%=x.author.id %>">
            <%= x.author.name %>
          </a>
          <span class="date rightfloat"><%=x.createdOn.toDateString()%></span>
        </div>
        <div class="hor2">
            <span class="text">
            <%= x.content %>
          </span>
          <span class="comment-buttons rightfloat">
            <% if(currentUser && ((currentUser.name =="admin")||(x.author._id.equals(currentUser._id) ) ) ) { %>
            <a class="ui tiny basic orange button" href="/blogs/<%=body._id%>/comments/<%=x._id %>/edit">Edit</a>
        
            <form style="display:inline" action="/blogs/<%=body._id%>/comments/<%=x._id%>?_method=DELETE" method="POST">
              <button class="ui small basic red button">Delete</button>
            </form>
            <%}%>
          </span>
        </div>
    </div>
    <%});%>
</div>

